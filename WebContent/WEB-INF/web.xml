<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>02_app_web_gestion_banque</display-name>
  
  <!-- ======================================================================== -->
  <!-- ======Declaration de la servlet pour l'authentification ================ -->
  <!-- ======================================================================== -->
 
  <servlet>
      <servlet-name>AuthentificationServlet</servlet-name>
      <servlet-class>com.intiformation.gestionbanque.controller.AuthentificationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
      <servlet-name>AuthentificationServlet</servlet-name>
      <url-pattern>/authentification_servlet</url-pattern>
  </servlet-mapping>
  
  
  <!-- ======================================================================== -->
  <!-- ======Page d'accueil de l'application => Authentification ============== -->
  <!-- ======================================================================== -->
  <welcome-file-list>
        <welcome-file>authentification.jsp</welcome-file>
  </welcome-file-list>
</web-app>